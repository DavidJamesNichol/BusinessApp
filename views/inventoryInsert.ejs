<% include partials/header %>

<div class="pt-2 col-12" style="background-color:green;color:white;">
  <h1 class="text-center">Inventory Insertion Page</h1>
</div>

<div class="col-12 inline">
  <div class="p-0">

    <form method="POST" action="/api/inventoryInsert" class="col-12 p-0">

      <!--First Row-->

      <div class="form-row">

        <div class="col-2 mb-3"></div>
		  
		  <div class="col-6 mb-3">
          <label for="name">Item Name</label>
          <input type="text" class="form-control col-12" id="name" name="name" placeholder="<Well Marketed Item Name>">
        </div>

        <div class="col-2 mb-3">
          <label for="quantity">Quantity</label>
          <input type="text" class="form-control" id="quantity" placeholder="1000" name="quantity">
        </div>

      </div>

      <!--Submit Button-->

      <button class="btn offset-2 mt-3" type="submit" name="submitButton" method="POST" action="/api/inventoryInsert"
        style="background-color:green;color:white;">Submit form</button>

    </form>

    <div class="spacer"></div>

    <div class="offset-2">


      <a href="./inventoryStock">View Stock</a>
      <br>
      <a href="/">Home</a>
    </div>

    <% include partials/footer %>