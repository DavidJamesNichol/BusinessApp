<% include partials/header %>

<div class="pt-2 col-12" style="background-color:darkblue;color:white;">
  <h1 class="text-center">Employee Insertion Page</h1>
</div>

<div class="col-10 offset-1 inline">
  <div class="px-4">

    <form method="POST" action="/api/employeeInsert">

      <div class="form-row">

        <div class="col-md-4 mb-3">
          <label for="first_name">First name</label>
          <input type="text" class="form-control" id="first_name" placeholder="Mark" name="first_name">
        </div>

        <div class="col-md-4 mb-3">
          <label for="last_name">Last name</label>
          <input type="text" class="form-control" id="last_name" placeholder="Otto" name="last_name">
        </div>

        <div class="col-md-4 mb-3">
          <label for="email">Email</label>
          <input type="text" class="form-control" id="email" name="email" placeholder="motto@email.com">
        </div>

      </div>

      <!--Next Row-->

      <div class="form-row">

        <div class="col-md-6 mb-3">
          <label for="phone">Phone Number</label>
          <input type="text" class="form-control" id="phone" name="phone" placeholder="(999) 999-9999">
        </div>

        <div class="col-md-3 mb-3">
          <label for="birthday">Birthday</label>
          <input type="text" class="form-control" id="birthday" name="birthday" placeholder="01/01/2000">
        </div>

        <div class="col-md-3 mb-3">
          <label for="ssn">SSN</label>
          <input type="text" class="form-control" id="ssn" name="ssn" placeholder="SSN">
        </div>

      </div>

      <!--Next Row-->

      <div class="form-row">

        <div class="col-5 mb-3">
          <label for="address">Street Address</label>
          <input type="text" class="form-control" id="address" name="address" placeholder="654 32nd st">
        </div>

        <div class="col-5 mb-3">
          <label for="city">City</label>
          <input type="text" class="form-control" id="city" name="city" placeholder="Chicago">
        </div>

        <div class="col-2 mb-3">
          <label for="state">US_state</label>
          <input type="text" class="form-control" id="state" name="state" placeholder="IL">
        </div>

      </div>

      <!--Submit Button-->

      <button class="btn mt-3" type="submit" name="submitButton" method="POST" action="/api/employeeInsert"
        style="background-color:darkblue;color:white;">Submit form</button>

    </form>

    <div class="spacer"></div>

    <a href="./employeeRoster">View Roster</a>
    <br>
    <a href="/">Home</a>

  </div>
</div>

<% include partials/footer %>