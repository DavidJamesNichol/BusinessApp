<% include partials/header %>

<div class="pt-2 col-12" style="background-color:fuchsia;color:white;">
  <h1 class="text-center">Sales Insertion Page</h1>
</div>

<div class="col-10 offset-1 inline">
  <div class="px-4">

    <form method="POST" action="/api/salesInsert">

	  <!--First Row-->

      <div class="form-row">

        <div class="col-4 mb-3">
          <label for="saleID">Sale ID</label>
          <input type="text" class="form-control" id="saleID" placeholder="0011001101" name="saleID">
        </div>

        <div class="col-md-4 mb-3">
          <label for="cust_f_name">Cust First Name</label>
          <input type="text" class="form-control" id="cust_f_name" placeholder="Matt" name="cust_f_name">
        </div>

        <div class="col-md-4 mb-3">
          <label for="cust_l_name">Cust Last Name</label>
          <input type="text" class="form-control" id="cust_l_name" name="cust_l_name" placeholder="Ottenheim">
        </div>

      </div>

      <!--Second Row-->

      <div class="form-row">

        <div class="col-6 mb-3">
          <label for="email">Email</label>
          <input type="text" class="form-control" id="email" name="email" placeholder="mottenheim@email.com">
        </div>

        <div class="col-3 mb-3">
          <label for="phone">Phone Number</label>
          <input type="text" class="form-control" id="phone" name="phone" placeholder="(999) 999-9999">
        </div>

        <div class="col-3 mb-3">
          <label for="date_of_sale">Date of Sale</label>
          <input type="text" class="form-control" id="date_of_sale" name="date_of_sale" placeholder="07/10/2019"
            required>
        </div>

      </div>

      <div class="form-row">

        <div class="col-6 mb-3">
          <label for="store_location">Street Address</label>
          <input type="text" class="form-control" id="store_location" name="store_location" placeholder="Chicago">
        </div>

      </div>
  </div>

  <!--Submit Button-->

  <div class="px-4">

    <button class="btn mt-3" style="background-color:fuchsia;color:white;" type="submit" name="submitButton"
      method="POST" action="/api/saleInsert">Submit form</button>

    </form>


  <div class="spacer"></div>
    <a href="./salesRecords">View Records</a>
    <br>
    <a href="/">Home</a>
  </div>

  <% include partials/footer %>